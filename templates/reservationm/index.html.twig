{% extends 'baseFront.html.twig' %}

{% block title %}Reservationm index{% endblock %}

{% block body %}


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <h1>Listes des r√©servations : </h1>
    <input class="form-control" id="myInput" type="text" placeholder="Search..">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>IdRes</th>
                <th>NbChambre</th>
                <th>NbPersonne</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody id="myTable">
        {% for reservationm in reservationms %}
            <tr>
                <td>{{ reservationm.idRes }}</td>
                <td>{{ reservationm.nbChambre }}</td>
                <td>{{ reservationm.nbPersonne }}</td>
                <td>{{ reservationm.date }}</td>
                <td>
                    <a href="{{ path('app_reservationm_show', {'idRes': reservationm.idRes}) }}">show</a>
                    <a href="{{ path('app_reservationm_edit', {'idRes': reservationm.idRes}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div id="google_translate_element"></div>

    <script type="text/javascript">
        function googleTranslateElementInit() {
            new google.translate.TranslateElement({pageLanguage: 'en'}, 'google_translate_element');
        }
