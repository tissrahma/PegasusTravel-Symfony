{% extends 'baseFront.html.twig' %}

{% block title %}Reclamation{% endblock %}

{% block body %}
    <h1>Reclamation</h1>

    <table class="table" border="2"  >
        <tbody>

            <tr>
                <th>Nom</th>
                <td>{{ reclamation.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ reclamation.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ reclamation.email }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ reclamation.commentaire }}</td>
            </tr>
            <tr>
                <th>Datereclamation</th>
                <td>{{ reclamation.datereclamation ? reclamation.datereclamation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Typereclamation</th>
                <td>{{ reclamation.typereclamation }}</td>
            </tr>
        </tbody>
    </table>

    <a type="submit" class="btn btn-primary " style="background-color: white ;margin-bottom: 15px;width: 250px;"href="{{ path('app_reclamation_index') }}">back to list</a>

    <a type="submit" class="btn btn-primary "style="background-color: white ;margin-bottom: 15px;width: 250px;" href="{{ path('app_reclamation_edit', {'numero': reclamation.numero}) }}" >edit</a>

    {{ include('reclamation/_delete_form.html.twig') }}
{% endblock %}
