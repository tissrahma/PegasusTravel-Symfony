{% extends 'baseBack.html.twig' %}

{% block body %}



    <div class="row">
        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Ajouter une maison d'hote</h6>

                    <!-- General Form Elements -->
                    {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
                    <label for="inputText" class="col-sm-4 col-form-label">nom maison : </label>
                    <div class="col-sm-10">
                        {{ form_widget(f.nom,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.nom,{'attr':{'class':'text-danger'}}) }}



                    <label for="inputText" class="col-sm-4 col-form-label">localisation :</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.localisation,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.localisation,{'attr':{'class':'text-danger'}}) }}

                    <label for="inputText" class="col-sm-4 col-form-label">Description :</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.description,{'attr':{'class':'form-control'}}) }}
                    </div>
                    {{ form_errors(f.description,{'attr':{'class':'text-danger'}}) }}

                    <label for="inputText" class="col-sm-4 col-form-label">prix :</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.prix,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.prix,{'attr':{'class':'text-danger'}}) }}

                    <label for="inputText" class="col-sm-8 col-form-label">Image</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.imageMaison , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Nom du fichier'}} ) }}
                        {{ form_errors(f.imageMaison) }}
                    </div>

                    <br/>
                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(f.ajouter,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>



                    {{ form_end(f) }}

                </div>
            </div>

        </div>

    </div>





{% endblock %}







