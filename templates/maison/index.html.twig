{% extends 'baseBack.html.twig' %}

{% block title %}Hello MaisonController!{% endblock %}

{% block body %}

    <link rel="stylesheet" href="{{ asset('bundles/mercuryseriesflashy/css/flashy.css') }}">


    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
<form method="POST">
    <input type="text" name="nom" >
    <input class="btn btn-success" type="submit" value="search">

</form>

    <div class="example-wrapper">

        <table class="table table-striped table-hover">
            <thead>
            <th >Nom du maison</th>
            <th >Destination du maison</th>
            <th >Description du maison</th>
            <th >Prix du maison</th>
            <th >image maison</th>

            <th >Modifier</th>
            <th >Supprimer</th>
            </thead>
            <tbody>
            {% for maison in m %}
                <tr>
                    <td>{{ maison.nom }}</td>
                    <td>{{ maison.localisation }}</td>
                    <td>{{ maison.description }}</td>
                    <td>{{ maison.prix }}</td>
                    <td><img src="{{ asset('uploads/'~maison.imageMaison) }}" style=" width:100px; height:100px; " alt=""/></td>

                    <td>
                            <a class="btn btn-success" href="{{ path('modifMaison',{'id':maison.idMaison}) }}">modifier</a>


                    </td>
                    <td>
                        <a class="btn btn-danger" href="{{ path('supp_maison',{'id':maison.idMaison}) }}">supprimer</a>
                    </td>
                </tr>




            {% endfor %}


            </tbody>

        </table>


            <a class="btn btn-primary" href="{{ path('addMaison') }}">Ajouter une maison d'hote </a>
        <a class="btn btn-primary" href="{{ path('imprimmaison') }}">PDF</a>
        <a class="btn btn-primary" href="{{ path('trimaison') }}">tri par nom</a>
        <a class="btn btn-primary" href="{{ path('trimaisonp') }}">tri par prix</a>
        <a class="btn btn-primary" href="{{ path('statmaison') }}">Stats</a>
         <a class="btn btn-primary" href="{{ path('mapM') }}">Google Maps</a>




  


        <div id="google_translate_element"></div>

        <script type="text/javascript">
            function googleTranslateElementInit() {
                new google.translate.TranslateElement({pageLanguage: 'en'}, 'google_translate_element');
            }
        </script>


        <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>



    </div>



{% endblock %}
