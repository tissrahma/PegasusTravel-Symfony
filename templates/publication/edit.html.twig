{% extends 'baseBack.html.twig' %}

{% block title %}Edit Publication{% endblock %}

{% block body %}
    <div class="container-xxl flex-grow-1 container-p-y">

        <div style="display: flex;align-content: center ;justify-content: center ;margin-top: 100px;padding: 20px ">
        <div class="col-md-6">
            <div class="card mb-4">
                <h5 class="card-header">Creation une Publication</h5>
                {{ form_start(form) }}
                <div class="card-body">
                    <div>
                        <div class="mb-3 row">
                            <label for="html5-date-input" class="col-md-2 col-form-label">Date</label>
                            <div class="col-md-10">
                                {{ form_widget(form.datepub,{'attr':{'class':'form-control'}})}}
                            </div>
                        </div>


                    </div>
                    <div class="mb-3">
                        <label for="formFile" class="form-label">Path</label>
                        {{ form_widget(form.path,{'attr':{'class':'form-control'}})}}

                    </div>

                    <div>
                        <label for="defaultFormControlInput" class="form-label">Description</label>
                        {{ form_widget(form.description,{'attr':{'class':'form-control'}})}}





                        <div class="row mb-3" style="margin-left: 250px">

                            <div class="col-sm-10">


                        <button type="submit" class="btn btn-sm btn-outline-primary">{{ button_label|default('Update') }}</button>
                                <a type="submit" class="btn btn-sm btn-outline-primary" href="{{ path('app_publication_index') }}">back to list</a>

                            </div>


                    </div>
                </div>
            </div>
                {{ form_end(form) }}
        </div>
    </div>
    </div>




{% endblock %}
