{% extends 'back.html.twig' %}

{% block body %}
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">My Account</h3>
                    </div>

                    <div class="card-body">
                        <div class="container-fluid">
                            {% if user %}
                            <section class="content">
                                <div class="container-fluid">
                                    <div class="row">
                                        {% for user in user %}
                                            <div class="col-md-3">

                                                <!-- Profile Image -->
                                                <div class="card card-primary card-outline">
                                                    <div class="card-body box-profile">
                                                        <div class="text-center">
                                                            <img class="profile-user-img img-fluid img-circle"
                                                                 src="{{ asset('back/dist/img/user.png')}}"
                                                                 alt="User profile picture">
                                                        </div>

                                                        <h3 class="profile-username text-center">{{ user.nom }} {{ user.prenom }}</h3>

                                                        <p class="text-muted text-center">{{ user.email }}</p>

                                                        <ul class="list-group list-group-unbordered mb-3">


                                                        </ul>

                                                        <a href="{{ path('edit_user',{'id':user.id }) }}" class="btn btn-primary btn-block"><b>Edit</b></a>
                                                        <a href="{{ path('delete_user',{'id':user.id }) }}" class="btn btn-warning btn-block"><b>Delete</b></a>
                                                        <a href="{{ path('change_state',{'id':user.id }) }}" class="btn btn-danger btn-block"><b>ban</b></a>
                                                        <a href="{{ path('unban',{'id':user.id }) }}" class="btn btn-success btn-block"><b>Unban</b></a>


                                                    </div>
                                                    <!-- /.card-body -->
                                                </div>
                                                <!-- /.card -->





                                                <!-- /.card -->
                                            </div>
                                        {% endfor %}
                                        {% else %}
                                            <p>Aucun utilisateur n'a été trouvé</p>
                                        {% endif %}
                                        <!-- /.col -->
                                    </div>
                                    <!-- /.row -->
                                </div><!-- /.container-fluid -->
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}