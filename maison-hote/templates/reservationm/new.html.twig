{% extends 'baseFront.html.twig' %}

{% block title %}New Reservationm{% endblock %}

{% block body %}
    <h1 class="align-content-center">passer une réservation : </h1>

    <div class="container-xxl flex-grow-1 container-p-y">
        <div style="display: flex;align-content: center ;justify-content: center ;margin-top: 100px;padding: 20px ">


            <div class="col-md-6">
                <div class="card mb-4">
                    {{ form_start(form,{'attr': {novalidate: 'novalidate'}} ) }}
                    <div class="card-body">

                        <div>
                            <label for="defaultFormControlInput" class="form-label col-sm-4">nombre des chambres : </label>
                            {{ form_widget(form.nbChambre,{'attr':{'class':'form-control'}})}}
                            {{ form_errors(form.nbChambre,{'attr':{'class':'text-danger'}}) }}

                        </div>
                        <div>
                            <label for="defaultFormControlInput" class="form-label col-sm-4">nombre des personnes : </label>
                            {{ form_widget(form.nbPersonne,{'attr':{'class':'form-control'}})}}
                            {{ form_errors(form.nbPersonne,{'attr':{'class':'text-danger'}}) }}

                        </div>

                        <div>
                            <label for="defaultFormControlInput" class="form-label col-sm-4">date de réservation : </label>
                            {{ form_widget(form.date,{'attr':{'class':'form-control'}})}}
                            {{ form_errors(form.date,{'attr':{'class':'text-danger'}}) }}

                        </div>

                        <div>
                            <label for="defaultFormControlInput" class="form-label col-sm-4">date de réservation : </label>
                            {{ form_widget(form.idMaison,{'attr':{'class':'form-control'}})}}
                            {{ form_errors(form.idMaison,{'attr':{'class':'text-danger'}}) }}

                        </div>

                        <div class="row mb-3" style="margin-left: 250px">

                            <div class="col-sm-10">

                                <button type="submit" class="btn btn-primary " >{{ button_label|default('passser la reservation') }}</button>

                            </div>






                        </div>
                    </div>
                    <a  type="submit" class="btn btn-primary " href="{{ path('app_reservationm_index') }}">Afficher vos réservations</a>
                </div>
                {{ form_end(form) }}
            </div>

        </div>
    </div>


    <a href="{{ path('app_reservationm_index') }}">Retour</a>
{% endblock %}
